{
    "servers": [
        {
            "name": "filesystem",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/app"
            ],
            "env": {},
            "timeout": 30,
            "description": "File system operations (read, write, list)"
        },
        {
            "name": "fetch",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-fetch"
            ],
            "env": {},
            "timeout": 60,
            "description": "HTTP fetch operations"
        },
        {
            "name": "discord",
            "command": "python",
            "args": [
                "mcp_servers/discord_server.py"
            ],
            "env": {},
            "timeout": 30,
            "description": "Discord bot actions (send messages, edit messages, reactions)"
        },
        {
            "name": "municode",
            "command": "python",
            "args": [
                "mcp_servers/municode_server.py"
            ],
            "env": {},
            "timeout": 30,
            "description": "Municipal code lookup (zoning, ordinances) via Municode"
        },
        {
            "name": "knowledge_graph",
            "command": "python",
            "args": [
                "mcp_servers/knowledge_graph_server.py"
            ],
            "env": {},
            "timeout": 120,
            "description": "Municipal zoning knowledge graph (build, query, summarize, search)"
        }
    ]
}